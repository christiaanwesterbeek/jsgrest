---
  extends: eslint:recommended
  parser: babel-eslint
  plugins:
    - flow-vars
  ecmaFeatures:
    modules: true
    experimentalObjectRestSpread: true
  env:
    es6: true
    node: true
  rules:
    comma-dangle: 0
    flow-vars/define-flow-type: 1
    flow-vars/use-flow-type: 1
    no-console: 0

